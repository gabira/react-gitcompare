{
	"env": {
		"browser": true,
		"jest": true,
		"es6": true
	},
	"extends": ["react-app", "airbnb"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react", "import", "jsx-a11y"],
	"rules": {
		"react/jsx-filename-extension": [
			"error",
			{ "extensions": [".js", ".jsx"] }
		],
		"react/destructuring-assignment": [
			"disabled",
			{ "ignoreClassFields": false }
		],
		"import/prefer-default-export": "off"
	}
}
